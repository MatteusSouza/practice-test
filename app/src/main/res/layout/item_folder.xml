<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_all">

    <ImageView
        android:id="@+id/folder_icon"
        android:layout_alignParentStart="true"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/ic_baseline_folder_open_24"
        android:contentDescription="@string/folder_icon" />

    <TextView
        android:id="@+id/item_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/item_quantity"
        android:layout_toLeftOf="@id/item_quantity"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/folder_icon"
        android:layout_toEndOf="@id/folder_icon"
        android:text="@string/example_folder"
        android:maxLength="16"
        style="@style/TextAppearance.MaterialComponents.Headline6" />

    <TextView
        android:id="@+id/item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/item_arrow_right"
        android:layout_toStartOf="@id/item_arrow_right"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:text="@string/example_quantity"
        android:maxLength="4"
        style="@style/TextAppearance.MaterialComponents.Headline6" />

    <ImageView
        android:id="@+id/item_arrow_right"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_48"
        android:contentDescription="@string/right_arrow" />

    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="0.1sp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/teal_200" />

</RelativeLayout>